import java.util.*;
  import java.io.*;
  
  public class Main {
    public static void main(String args[]) throws IOException {
      
      //write your code here
      Scanner s=new Scanner(System.in);
      int sum=0;
      int X=s.nextInt();
      while(X>0)
      {
        int lastdig=X%10;;
        sum=sum+lastdig;
        X=X/10;
      }
      System.out.println(sum);
    }
  }
